<script type="text/javascript">
$('#checkallitems').click(function(){
    $('.checkeditems').prop('checked', $(this).is(':checked'));
});
$('#deleteSelected').click(function(){
    if(confirm('<?php echo $this->translate('Are you sure to delete the selected vehicles?'); ?>')){
        var $count = 0;
        var $selectedItems = new Array();
        $.each($('.checkeditems'), function($key, $item){
            if($($item).is(':checked')){
                $selectedItems[$count++] = $($item).val();
            }
        });
        
        if($count>0){
            $selectedItems = $selectedItems.join(',');
            if($selectedItems != ''){
                location.href = "<?php echo $this->url(array('action' => 'delete-vehicle', 'cid' => $company->getIdentity()), 'admin_courier_general_info', true); ?>/id/"+$selectedItems;
            }
        }else{
            alert('<?php echo $this->translate('Sorry, you did not select any vehicles!'); ?>');
        }
    }
});
function deleteThis($itemId){
    if(confirm('<?php echo $this->translate('Are you sure to delete the vehicle?'); ?>')){
        if($itemId != ''){
            location.href = "<?php echo $this->url(array('action' => 'delete-vehicle', 'cid' => $company->getIdentity()), 'admin_courier_general_info', true); ?>/id/"+$itemId;
        }
    }
}
</script>